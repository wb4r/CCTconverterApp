<h1>FX-u-like</h1>
<br>
<br>
<br>

  <div class="well col-xs-5">
    <!-- <div class="col-xs-8"> -->

      <%= form_for @search do |f| %>

        <br>
        <div class="control-group">
          <%= f.label :date %>
          <%= f.date_field :date, :placeholder => 'yyyy/mm/dd' %>
        </div>

        <br>
        <br>
        <div class="control-group">
          <%= f.label :ammount %>
          <%= f.text_field :ammount, :placeholder => '1' %>
        </div>

        <br>
        <br>
        <div class="control-group">
          <%= f.label :currencyFrom, "Convert From" %>
          <%= f.select :currencyFrom, @currencies.sort%>
        </div>

        <br>
        <br>
        <div class="control-group">
          <%= f.label :currencyTo, "Convert To" %>
          <%= f.select :currencyTo, @currencies.sort%>
        </div>
        <hr>
        <div class="row">
          <div class="col-xs-6">
            <div class="control-group" style="margin-top: 15px;">
              <%= f.submit "Make Conversion", class: "btn btn-primary" %>
            </div>
          </div>
          <div class="col-xs-6">
            <h3><%= f.text_field :result, :readonly => true, style: "max-width: 170px;" %></h3>
          </div>
        </div>

      <% end %>
    <!-- </div> -->
    <!-- <div class="col-xs-4"> -->

    <!-- </div> -->
    <!-- <br>
    <br> -->
  </div>
